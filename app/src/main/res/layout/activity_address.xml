<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Address">


    <fragment
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="444dp"
        app:navermap_latitude="37.56031362106455 "
        android:adjustViewBounds="true"
        android:layout_above="@+id/txt_address"
        app:navermap_longitude="126.83815162757227"
        app:navermap_zoom="16" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/txt_parking"
        android:text="서울 강서구 강서로 385 우성SB타워 1층 127호"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txt_parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_home"
        android:layout_marginBottom="15dp"
        android:text="주차장 입구"
        android:textColor="#000000"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_reservation"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button"
        android:adjustViewBounds="true"
        android:text="홈"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:text="예약하기"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:textSize="20sp" />


</RelativeLayout>