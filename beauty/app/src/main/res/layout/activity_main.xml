<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:scrollbarThumbHorizontal="@android:color/holo_red_light"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/name" />

    <!--    <Button-->
    <!--        android:id="@+id/btn_custom_login"-->
    <!--        android:layout_width="371dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginLeft="20dp"-->

    <!--        android:background="@drawable/kakao_login_large_wide"-->
    <!--        android:textSize="18sp" />-->


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/logo"
        android:background="#FFFFFF"
        android:scrollbarThumbHorizontal="@drawable/big_button"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/photo1" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo2" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                app:srcCompat="@drawable/photo3" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo4" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo5" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo6" />

            <ImageView
                android:id="@+id/img7"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo7" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo8" />

            <ImageView
                android:id="@+id/img9"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo9" />

            <ImageView
                android:id="@+id/img10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo10" />

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/reservation"
        android:layout_width="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollView2"
        android:background="@drawable/button"
        android:text="예약하기"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
   />
    <Button
        android:id="@+id/address"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/horizontalScrollView2"
        android:background="@drawable/button"
        android:text="주소보기"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="18sp"
   />
    <Button
        android:id="@+id/reviewcyclerView"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollView2"
        android:background="@drawable/button"
        android:text="리뷰보기"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textSize="18sp"
   />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_custom_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView2"
        android:layout_marginBottom="20dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="문의 : 010-2842-5656" />
</RelativeLayout>