<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:scrollbarThumbHorizontal="@android:color/holo_red_light"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/name"
        tools:ignore="NotSibling" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_above="@id/qwe"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:fillViewport="true"
        android:scrollbarThumbHorizontal="@drawable/big_button"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="insideInset">

        <RelativeLayout
            android:layout_marginVertical="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:layout_marginLeft="40dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo1" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/img1"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo2" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/img2"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo3" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img3"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo4" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img4"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo5" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img5"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"

                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo6" />

            <ImageView
                android:id="@+id/img7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img6"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo7" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img7"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo8" />

            <ImageView
                android:id="@+id/img9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img8"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo9" />

            <ImageView
                android:id="@+id/img10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/img9"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/photo10" />

        </RelativeLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/qwe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reviewcyclerView"

        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reservation"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="예약하기"
            android:textSize="18sp" />
        <Button
            android:id="@+id/logout"
            android:layout_width="110dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:background="@drawable/button"
            android:text="로그아웃"
            android:textSize="18sp" />
        <Button
            android:id="@+id/address"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button"
            android:text="주소보기"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewcyclerView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dip"
        android:layout_above="@+id/textView2"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:text="문의 : 010-2842-5656" />
</RelativeLayout>