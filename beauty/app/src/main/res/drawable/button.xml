<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#F6CB4A" />
            <gradient android:angle="-90" android:startColor="#F6CB4A" android:endColor="#F6CB4A"  />

            <!-- 테두리 내부 색상 설정 -->
            <solid android:color="@android:color/white" />

            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="3dp"
                android:color="#E83838" />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#F6CB4A" />
            <solid android:color="#F6CB4A"/>
            <!-- 테두리 내부 색상 설정 -->
            <solid android:color="@android:color/white" />

            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="3dp"
                android:color="#E83838" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#F6CB4A" />
            <gradient android:angle="-90" android:startColor="#F6CB4A" android:endColor="#F6CB4A" />
            <!-- 테두리 내부 색상 설정 -->
            <solid android:color="@android:color/white" />

            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="3dp"
                android:color="#E83838" />
        </shape>
    </item>

</selector>